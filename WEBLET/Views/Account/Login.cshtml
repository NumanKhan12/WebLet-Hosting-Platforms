<script>
    var wage = document.getElementById("email");
    wage.addEventListener("keydown", function (e) {
        if (e.keyCode === 13) {  //checks whether the pressed key is "Enter"
            Login(document.getElementById('SIGN_IN'));
        }
    });
    var password = document.getElementById("password");
    password.addEventListener("keydown", function (e) {
        if (e.keyCode === 13) {  //checks whether the pressed key is "Enter"
            Login(document.getElementById('SIGN_IN'));
        }
    });
    function Login(btn) {
        btn.disabled = true;
        btn.innerHTML = '<img  src="/images/2.gif" width="20" class=" text-center" height="20"/>';
        var email = $('#email').val();
        var password = $('#password').val();
        if (email=='') {
            $('#emailError').text('Please enter email');
            $("#email").css("border", "1px solid red");
            btn.disabled = false;
            btn.innerHTML = 'SIGN IN';
            return;
        }
        else {
            $('#emailError').text('');
            $("#email").css("border", "1px solid #e8ecf1");
        }
        if (password == '') {
            $('#pwderror').text('Please enter passwords');
            $("#password").css("border", "1px solid red");
            btn.disabled = false;
            btn.innerHTML = 'SIGN IN';
            return ;
        }
        else {
            $('#pwderror').text('');
            $("#password").css("border", "1px solid #e8ecf1");
        }
        data = {
            "email": email,
            "password":password
        }
       // var result = AjaxPostCall('POST', '', data).responseJSON;
              btn.disabled = false;

        $.ajax({
            type: 'POST',
            url: '/Account/Login',
            data: data,
            success: function (result) {
                if (result.Code == "Success") {
                    Alert('success','Successfuly Logged In')
                    window.location.href = result.RedirectUrl;
                }
                else {
                    $('#LogInError').text(result.Description);
                    btn.disabled = false;
                    btn.innerHTML = 'SIGN IN';
                }
            }
        })
        
    }
</script>