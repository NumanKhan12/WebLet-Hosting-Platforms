        $(document).ready(() => {
            $(".chat-box").hide();
            $(".chat-btn").click(() => {
                $(".chat-box").slideToggle("slow")
            })
        })
        window.onload = function () {
            
            divScrollDown();
        };
        function divScrollDown() {
            var objDiv = document.getElementById("messagesList");
