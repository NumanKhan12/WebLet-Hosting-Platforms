                                    <div class="input-group-append heighttext">
                                        <div class="input-group-append">
                                            <span class="input-group-text" id="basic-addon2"  onclick="LoadDetails(this)"><b><i class="fas fa-search"></i></b></span>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                        @*heading*@
