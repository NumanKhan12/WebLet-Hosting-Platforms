                                <label class="text-sm heighttext">select Panel</label>
                                <div class="input-group mb-sm-3">
                                    <select class="form-control form-control-sm select2 heighttext" style="width: 100%;" id="PANEL_ID">
                                        <option selected="selected" value="" disabled>select panel</option>
